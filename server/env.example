# Server environment example (safe to commit)
# Copy to .env and fill secrets locally or in your hosting env.

# URLs
FRONTEND_URL=http://localhost:5173
FRONTEND_ORIGIN=http://localhost:5173
API_URL=http://localhost:5000

# Server
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb+srv://<user>:<pass>@cluster.mongodb.net/?retryWrites=true&w=majority&appName=DataSet

# Auth
JWT_SECRET=change_me
JWT_EXPIRE=30d
SESSION_SECRET=change_me

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# SMTP (Contact page)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=

# Email provider (optional HTTP provider to avoid SMTP issues)
# Choose ONE provider by setting EMAIL_PROVIDER to 'gmailapi' (recommended), 'postmark', or 'resend'.
# Do NOT commit real keys here; set them only in server/.env or your hosting env.
# Examples:
#   EMAIL_PROVIDER=gmailapi
#   GMAIL_CLIENT_ID=353876655523-8fngpkqqnimsfpqegorm4q1f64n9jj23.apps.googleusercontent.com
#   GMAIL_CLIENT_SECRET=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
#   GMAIL_REFRESH_TOKEN=your_oauth_refresh_token
#   GMAIL_SENDER=replyearnbycode@gmail.com
#   EMAIL_FROM=replyearnbycode@gmail.com
# or
#   EMAIL_PROVIDER=postmark
#   POSTMARK_API_KEY=your_postmark_server_token
#   EMAIL_FROM=noreply@your-verified-domain.com
# or
#   EMAIL_PROVIDER=resend
#   RESEND_API_KEY=your_resend_api_key
#   EMAIL_FROM=onboarding@resend.dev (for testing) or noreply@your-verified-domain.com
EMAIL_PROVIDER=
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REFRESH_TOKEN=
GMAIL_SENDER=replyearnbycode@gmail.com
POSTMARK_API_KEY=
RESEND_API_KEY=
# Sender email (must be verified with your provider)
EMAIL_FROM=replyearnbycode@gmail.com
# Frontend build consumes this if proxied
VITE_API_URL=http://localhost:5000/api

# Payments (if used)
PAYMENTS_MODE=live
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# Runtimes
JAVAC_BIN=javac
JAVA_BIN=java
PYTHON_BIN=python
